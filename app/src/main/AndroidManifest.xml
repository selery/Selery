<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.selery.selery">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:background="@mipmap/splash"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.HideTitle" />
        <activity
            android:name=".EmailRegistrationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.HideTitle" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.HideTitle" />
        <activity
            android:name=".ProgramListActivity"
            android:screenOrientation="portrait"
            android:label="" />
        <activity
            android:name=".ProgramSelectActivity"
            android:screenOrientation="portrait"
            android:label=""
            android:parentActivityName=".ProgramListActivity" />
        <activity
            android:name=".ProgramStartActivity"
            android:screenOrientation="portrait"
            android:label=""
            android:parentActivityName=".ProgramListActivity" />
        <activity
            android:name=".PersonalInformationActivity"
            android:screenOrientation="portrait"
            android:label=""
            android:parentActivityName=".ProgramStartActivity"/>
        <activity
            android:name=".DiagnosticActivity"
            android:screenOrientation="portrait"
            android:label=""
            android:parentActivityName=".PersonalInformationActivity"/>
    </application>

</manifest>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.selery.selery">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:background="@mipmap/splash"
            android:theme="@style/SplashTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.HideTitle"
            />
        <activity android:name=".EmailRegistrationActivity"
            android:theme="@style/AppTheme.HideTitle"/>

        <activity android:name=".LoginActivity"
            android:theme="@style/AppTheme.HideTitle"/>

        <activity
            android:name=".ProgramListActivity"
            android:label="@string/wkt_title_activity_program_list"
             />
        <activity
            android:name=".ProgramSelectActivity"
            android:label="@string/wkt_title_activity_program_select"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProgramStartActivity"
            android:label="@string/wkt_title_activity_program_start"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>

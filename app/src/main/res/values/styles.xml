<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="logo">@mipmap/ic_seleryheader</item>
        <item name="displayOptions">useLogo|showHome</item>-->
        <!-- Customize your theme here.
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        -->
    </style>


    <style name="AppTheme.HideTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="SplashTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@mipmap/splash</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="button2">
        <item name="android:background">@drawable/button2_bg</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#285E81</item>
    </style>

    <style name="editInput" parent="@android:style/TextAppearance.Small">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_width">242dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="button3">
        <item name="android:background">@drawable/button3_bg</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">242dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="label1">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#2B5F7F</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="editInput2">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/edittext_background2</item>
        <item name="android:textColor">#444444</item>
        <item name="android:layout_width">145dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="SpinnerStyle" >
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="SpinnerItemStyle" >
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">#ffffff</item>
    </style>

</resources>

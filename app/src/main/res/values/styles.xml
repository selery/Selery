<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@mipmap/splash</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="button2">
        <item name="android:background">@drawable/button2_bg</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#285E81</item>
    </style>

    <style name="editInput" parent="@android:style/TextAppearance.Small">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_width">242dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="button3">
        <item name="android:background">@drawable/button3_bg</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">242dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

</resources>
